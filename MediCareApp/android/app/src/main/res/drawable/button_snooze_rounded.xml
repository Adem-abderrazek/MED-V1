<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#D97706"
                android:endColor="#B45309" />
            <corners android:radius="34dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#F59E0B"
                android:endColor="#D97706" />
            <corners android:radius="34dp" />
        </shape>
    </item>
</selector>

