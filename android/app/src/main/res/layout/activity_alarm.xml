<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/alarm_background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Icon Container with layered circles -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="32dp"
            android:gravity="center">
            
            <!-- Magnificent layered icon circle -->
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/medication_icon_circle" />
            
            <!-- Pill icon overlay -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_pill"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="Medication pill icon" />
        </FrameLayout>

        <!-- Time Display with indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">
            
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="#FFFFFF"
                android:textSize="52sp"
                android:textStyle="normal"
                android:letterSpacing="0.03"
                android:gravity="center" />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/time_indicator_dot" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heure actuelle"
                    android:textColor="#FFFFFFCC"
                    android:textSize="12sp"
                    android:layout_marginStart="8dp"
                    android:letterSpacing="0.01" />
            </LinearLayout>
        </LinearLayout>

        <!-- Medication Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/medication_card_background"
            android:padding="24dp"
            android:layout_marginBottom="40dp">
            
            <!-- Alarm Label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ””"
                    android:textSize="20sp" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RAPPEL MÃ‰DICAMENT"
                    android:textColor="#10B981"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.015"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
            
            <!-- Medication Name -->
            <TextView
                android:id="@+id/medicationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medication"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Dosage Container -->
            <LinearLayout
                android:id="@+id/dosageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:background="@drawable/dosage_badge"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš—"
                    android:textSize="18sp" />
                
                <TextView
                    android:id="@+id/dosageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dosage"
                    android:textColor="#34D399"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
            
            <!-- Instructions Container -->
            <LinearLayout
                android:id="@+id/instructionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹"
                    android:textSize="18sp"
                    android:textColor="#FFFFFFCC" />
                
                <TextView
                    android:id="@+id/instructionsText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Instructions"
                    android:textColor="#FFFFFFCC"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="24dp">

            <!-- Confirm Button -->
            <Button
                android:id="@+id/confirmButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:minHeight="64dp"
                android:paddingVertical="18dp"
                android:paddingHorizontal="20dp"
                android:text="J'ai pris"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_confirm_gradient"
                android:gravity="center"
                android:letterSpacing="0.05" />

            <!-- Snooze Button -->
            <Button
                android:id="@+id/snoozeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:minHeight="64dp"
                android:paddingVertical="18dp"
                android:paddingHorizontal="20dp"
                android:text="Reporter 5 min"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_snooze_gradient"
                android:gravity="center"
                android:letterSpacing="0.05" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>






